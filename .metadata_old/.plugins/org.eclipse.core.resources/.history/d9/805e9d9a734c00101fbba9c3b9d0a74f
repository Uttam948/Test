
public class OtherZigZagPattern {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String st = "PAYPALISHIRING";
		int n = 4;
		char ch[][] = new char[n][st.length()-1];
		
		int i = 0 , j = 0 , v =  0 ;
		int count = 0;
		
		while(v < st.length()) {
		
			while( v < st.length() && i < n    ) {
				ch[i][j] = st.charAt(v);
			//	System.out.print(st.charAt(v));
				System.out.print(ch[i][j]);
				i++;
				v++;
				count++;
			}
			i--;
		    j++;
	     	System.out.println();
		//	System.out.println(i);
			while( v < st.length() && i > 1) {
				i--;    
		//		System.out.print(" "+st.charAt(v));
				ch[i][j] = st.charAt(v);
		    	System.out.print(ch[i][j]);
				j++;
			//	System.out.println(i);
				v++;
				count++;
			}
			i--;
			System.out.println();
		}
		
		for(int m = 0;m<n;m++) {
			for(int l = 0; l< st.length()-1;l++) {
				
				
					System.out.print(ch[m][l]+" ");
				
			}
			System.out.println();
		}
             
	}

}
